<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: #FBF8DD; /* Set background color of the entire website */
    }

    .showcase {
        position: relative;
        height: 100vh; /* Adjust as needed */
        overflow: hidden;
    }

    .video-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 0; /* Ensure the video is behind the text */
    }

        .video-container video {
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: -1; /* Ensure the video is behind the background color */
        }

    .text-center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff; /* Text color */
        text-align: center;
        z-index: 1; /* Ensure the text is above the video */
    }
</style>

<section class="showcase">
    <div class="video-container">
        <video src="~/videos/homevideo.mp4" autoplay muted loop></video>
    </div>
    <div class="text-center">
        <h1 class="display-4">Get Cooking!</h1>
        <button type="button" class="btn btn-primary"onclick="location.href='@Url.Action("Create","Recipes")'">
    <i class="bi bi-plus-square"></i> ADD NEW RECIPE </button>
    </div>
</section>
