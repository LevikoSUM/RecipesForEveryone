@model IEnumerable<Services.DTOs.RecipeDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>My Recipes</h1>

<p>
    <button type="button" class="btn btn-primary"onclick="location.href='@Url.Action("Create","Recipes")'">
    <i class="bi bi-plus-square"></i> ADD NEW RECIPE </button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipeType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeType)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm"> <i class="bi bi-pencil-square"></i></a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm"> <i class="bi bi-eye"></i></a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
